@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Tervetuloa!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <input type="number" class="form-control mb-2 w-25" id="luku1" />
    <input type="number" class="form-control mb-2 w-25" id="luku2" />

    <button id="laskeNappi" class="btn btn-info">Laske</button>
</div>

@section scripts
{
    <script type="text/javascript">

        console.log("Skriptin suoritus alkaa.");
        $("#laskeNappi").click(function () {

            console.log("Nappia klikattu.");

            const luku1 = $("#luku1").val();
            const luku2 = $("#luku2").val();

            const summa = parseInt(luku1) + parseInt(luku2);
            alert("Summa on: " + summa);
        });

    </script>
}