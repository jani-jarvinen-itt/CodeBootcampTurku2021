@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4">
    <h1 class="display-4">Tervetuloa!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            Luku 1:
        </div>
        <div class="col-sm-3">
            <input type="number" class="form-control mb-3" id="luku1" />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            Luku 2:
        </div>
        <div class="col-sm-3">
            <input type="number" class="form-control mb-3" id="luku2" />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 offset-2">
            <button id="laskeNappi" class="btn btn-info">Laske</button>
        </div>
    </div>
</div>


@section scripts
{
    <script type="text/javascript">

        console.log("Skriptin suoritus alkaa.");
        $("#laskeNappi").click(function () {

            console.log("Nappia klikattu.");

            const luku1 = $("#luku1").val();
            const luku2 = $("#luku2").val();

            const summa = parseInt(luku1) + parseInt(luku2);
            alert("Summa on: " + summa);
        });

    </script>
}